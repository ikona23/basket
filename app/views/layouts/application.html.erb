<!DOCTYPE html>
<html>
<head>
  <title>košíkovanie.sk</title>
  <%= stylesheet_link_tag 'application', media:'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Lato-Regular:300,400,700' rel='stylesheet' type='text/css'>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tags %>
</head>
<body>
<header class = "fixed">
  <div class="navbar navbar-fixed-top" role="navigation">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="">Košíkovanie.sk</a>
        <div class="nav-collapse text-center">
          <ul class="nav">
            <li class="divider"></li>
            <li class=""<%= 'active' if current_page?(root_path) %>"><%= link_to "Domov", root_path %></li>
            <li class=""><%= link_to "Obchod",  store_index_path %></li>
            <li class=""><%= link_to "Tovar",  products_path %></li>
            <li class=""><%= link_to "Galeria", static_home_path %></li>
            <li class=""><%= link_to "O nas", static_about_path%></li>
          </ul>
        </div><!-- /.nav-collapse -->
      </div><!-- /.container -->
    </div><!-- /.navbar-inner -->
  </div><!-- /.navbar -->
</header>

<div class="container">

  <%= yield %>

</div>

<div class="footer">
  <div class="inside">
    <a href="http://localhost:3000">Košíkovanie.sk</a>
  </div>
</div>

<script src="//use.typekit.net/tfi4mim.js"></script>
<script>try{Typekit.load();}catch(e){}</script>
<script type='text/javascript' src="/assets/application.js"></script>
<script src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js'></script>
<script src="/assets/bootstrap.min.js"></script>
<script type='text/javascript' src="/assets/jquery.quicksand.js"></script>
<script type='text/javascript' src="/assets/jquery.js"></script>
<script type='text/javascript' src="/assets/init.js" ></script>
</body>
</html>
